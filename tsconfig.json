{
   "compilerOptions": {
      "target": "ES2017",
      "module": "CommonJS",
      "lib": ["ES6"],
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "typeRoots": [
         "./node_modules/@types",
         "./src/@types"
      ],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
         "@models/*": ["./src/models/*"],
         "@views/*": ["./src/views/*"],
         "@controllers/*": ["./src/controllers/*"],
         "@repositories/*": ["./src/repositories/*"],
         "@utils/*": ["./src/utils/*"]
      }
   }
}